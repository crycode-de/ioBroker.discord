{
  "i18n": true,
  "items": {
    "enableText2command": {
      "type": "checkbox",
      "sm": 12,
      "label": "Enable text2command for this state",
      "help": "When enabled, the received message is send to the configured text2command instance.",
      "hidden": "!customObj._id.match(/^discord\\.\\d+\\..+\\.message$/)"
    },

    "_divider": {
      "type":"divider",
      "hidden": "!customObj._id.match(/^discord\\.\\d+\\..+\\.message$/)"
    },

    "enableCommands": {
      "type": "checkbox",
      "newLine": true,
      "sm": 12,
      "label": "Enable discord commands for this state",
      "help": "Make this state available for discord commands",
      "default": false
    },

    "name": {
      "type": "text",
      "sm": 12,
      "md": 6,
      "label": "Name",
      "defaultFunc": "customObj.common && customObj.common.name",
      "help": "A name for this object. Leave empty to use object's name.",
      "hidden": "!data.enableCommands"
    },
    "alias": {
      "type": "text",
      "sm": 12,
      "md": 6,
      "label": "Alias",
      "defaultFunc": "customObj._id",
      "help": "A ID alias for this object. Leave empty to use object's id.",
      "validator": "!!data.alias.match(/^[0-9a-zA-Z._-]*$/)",
      "hidden": "!data.enableCommands"
    },
    "readOnly": {
      "newLine": true,
      "type": "checkbox",
      "label": "Read only",
      "help": "Only read the actual state value",
      "defaultFunc": "customObj.common && customObj.common.write === false",
      "sm": 6,
      "hidden": "!data.enableCommands",
      "default": true
    },
    "writeOnly": {
      "type": "checkbox",
      "label": "Write only",
      "default": false,
      "help": "No status query",
      "defaultFunc": "customObj.common && customObj.common.read === false",
      "sm": 6,
      "hidden": "!data.enableCommands"
    }
  }
}