    "email": "peter@crycode.de",
    "url": "https://crycode.de"
  },
  "homepage": "https://github.com/crycode-de/ioBroker.discord",
  "license": "MIT",
  "keywords": [
    "discord",
    "notification",
    "message",
    "bot",
    "ioBroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crycode-de/ioBroker.discord"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.1.6",
    "autobind-decorator": "^2.4.0",
    "discord.js": "^14.16.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@crycode/eslint-config": "^2.1.1",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.0",
    "@types/chai": "^4.3.19",
    "@types/chai-as-promised": "^8.0.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.5.5",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "chai": "^5.1.1",
    "chai-as-promised": "^8.0.0",
    "eslint": "^9.11.0",
    "mocha": "^10.7.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build admin/build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "translate": "translate-adapter -b admin/i18n/en.json",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/crycode-de/ioBroker.discord/issues"
  },
  "readmeFilename": "README.md"
}
